set number                      " always show line numbers
set ignorecase                  " ignore case when searching
set smartcase                   " ignore case if search pattern is all lowercase
set timeout timeoutlen=200 ttimeoutlen=100 " timeout
set autowrite                   "Save on buffer switch
set autoindent                  " always set autoindenting on
set expandtab                   " spaces are used for indenting lines, even when you press the Tab key.
set tabstop=4                   " this will insert 4 spaces for a line indent
set shiftwidth=4                " manages the indentation when you use the '>>' or '<<' operators 
syntax on
